test -d ptests || mkdir -p ptests

rc=0

TEXMFCNF=$srcdir/../kpathsea
BSTINPUTS=$srcdir/bibtests
BIBINPUTS=$srcdir/bibtests
export TEXMFCNF BSTINPUTS BIBINPUTS


## test for sorting and change.case$
cp $srcdir/bibtests/sortp.aux ptests/xsortp.aux
./pbibtex ptests/xsortp || rc=51
diff $srcdir/bibtests/sortp.bbl ptests/xsortp.bbl || rc=52

## test for change.case$
cp $srcdir/bibtests/casep.aux ptests/xcasep.aux
./pbibtex ptests/xcasep || rc=53
diff $srcdir/bibtests/casep.bbl ptests/xcasep.bbl || rc=54

## test for add.period$
cp $srcdir/bibtests/periodp.aux ptests/xperiodp.aux
./pbibtex ptests/xperiodp || rc=3
diff $srcdir/bibtests/periodp.bbl ptests/xperiodp.bbl || rc=4

## test for substring$
cp $srcdir/bibtests/substrp.aux ptests/xsubstrp.aux
./pbibtex ptests/xsubstrp || rc=5
diff $srcdir/bibtests/substrp.bbl ptests/xsubstrp.bbl || rc=6

## test for text.length$, text.prefix$
cp $srcdir/bibtests/txtprfxp.aux ptests/xtxtprfxp.aux
./pbibtex ptests/xtxtprfxp || rc=7
diff $srcdir/bibtests/txtprfxp.bbl ptests/xtxtprfxp.bbl || rc=8

## test for width$
cp $srcdir/bibtests/widthp.aux ptests/xwidthp.aux
./pbibtex ptests/xwidthp || rc=9
diff $srcdir/bibtests/widthp.bbl ptests/xwidthp.bbl || rc=10

## test for chr.to.int$, int.to.str$, int.to.chr$
cp $srcdir/bibtests/charp.aux ptests/xcharp.aux
./pbibtex ptests/xcharp
### || rc=11
### It results errors.
diff $srcdir/bibtests/charp.bbl ptests/xcharp.bbl || rc=12

## test for num.names$, format.name$
cp $srcdir/bibtests/namep.aux tests/xnamep.aux
max_print_line=119 ./pbibtex tests/xnamep || rc=13
diff $srcdir/bibtests/namep.bbl tests/xnamep.bbl || rc=14

## test for is.knj.str$
cp $srcdir/bibtests/isknjp.aux ptests/xisknjp.aux
./pbibtex ptests/xisknjp || rc=15
diff $srcdir/bibtests/isknjp.bbl ptests/xisknjp.bbl || rc=16


exit $rc

