test -d uptests || mkdir -p uptests

rc=0
bb=

TEXMFCNF=$srcdir/../kpathsea
${BSTINPUTS:=.:/usr/share/texlive/texmf-dist//}
${BIBINPUTS:=.:/usr/share/texlive/texmf-dist//}
export TEXMFCNF BSTINPUTS BIBINPUTS

BIBTEX="./upbibtex"

## test for Japanese example
for bst in jabbrv jplain jalpha junsrt jname jipsj tieice tipsj jorsj; do

  job=jxampl-$bst-up
  cp $srcdir/bibtests/$job.aux uptests/$job.aux
  $BIBTEX uptests/$job \
   && diff $srcdir/bibtests/$job.bbl uptests/$job.bbl || { rc=1 ; bb=$bb,$bst ; }

done

for bst in jabbrv jplain jalpha junsrt jname jipsj tieice tipsj jorsj; do\

  job=jxampl-$bst-up
  cp $srcdir/bibtests/$job.aux uptests/$job-wide.aux
  max_print_line=399 ${BIBTEX} uptests/$job-wide \
   && diff $srcdir/bibtests/$job-wide.bbl uptests/$job-wide.bbl || { rc=2 ; bb=$bb,$bst-w ; }

done


if [ $rc -gt 0 ]; then
  if [ -n "$bb" ]; then
    echo ERROR in upbibtex $bb
  fi
else
  echo SUCCESS
fi
exit $rc
