test -d uptests || mkdir -p uptests

rc=0

TEXMFCNF=$srcdir/../kpathsea
BSTINPUTS=$srcdir/tests
BIBINPUTS=$srcdir/tests
export TEXMFCNF BSTINPUTS BIBINPUTS


## test for sorting and change.case$
cp $srcdir/tests/sortu.aux uptests/xsortu.aux
./upbibtex uptests/xsortu || rc=51
diff $srcdir/tests/sortu.bbl uptests/xsortu.bbl || rc=52

## test for change.case$
cp $srcdir/tests/caseu.aux uptests/xcaseu.aux
./upbibtex uptests/xcaseu || rc=53
diff $srcdir/tests/caseu.bbl uptests/xcaseu.bbl || rc=54

## test for add.period$
cp $srcdir/tests/periodu.aux uptests/xperiodu.aux
./upbibtex uptests/xperiodu || rc=3
diff $srcdir/tests/periodu.bbl uptests/xperiodu.bbl || rc=4

## test for substring$
cp $srcdir/tests/substru.aux uptests/xsubstru.aux
./upbibtex uptests/xsubstru || rc=5
diff $srcdir/tests/substru.bbl uptests/xsubstru.bbl || rc=6

## test for text.length$, text.prefix$
cp $srcdir/tests/txtprfxu.aux uptests/xtxtprfxu.aux
./upbibtex uptests/xtxtprfxu || rc=7
diff $srcdir/tests/txtprfxu.bbl uptests/xtxtprfxu.bbl || rc=8

## test for width$
cp $srcdir/tests/widthu.aux uptests/xwidthu.aux
./upbibtex uptests/xwidthu || rc=9
diff $srcdir/tests/widthu.bbl uptests/xwidthu.bbl || rc=10

## test for chr.to.int$, int.to.str$, int.to.chr$
cp $srcdir/tests/charu.aux uptests/xcharu.aux
./upbibtex uptests/xcharu
### || rc=11
### It results errors.
diff $srcdir/tests/charu.bbl uptests/xcharu.bbl || rc=12


exit $rc



